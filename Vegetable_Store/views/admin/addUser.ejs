<%- include ../layouts/adminHeader %>

    <h2 class="page-title">Thêm trang</h2>
    <a href="/admin/pages" class="btn btn-primary">Quay lại danh sách trang</a>

    <form method="POST" action="/admin/pages/add-page">

        <div class="form-group">
            <label for="">Tiêu đề</label>
            <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Tiêu đề">
        </div>
        <div class="form-group">
            <label for="">Slug</label>
            <input type="text" class="form-control" name="slug" value="<%= slug %>" placeholder="Slug">
        </div>
        <div class="form-group">
            <label for="">Nội dung</label>
            <textarea class="form-control" id = "ta" name="content" cols="30" rows="10" placeholder="Nội dung" ><%= content %> </textarea>
        </div>
        <button class="btn btn-default">Thêm trang</button>
    </form>

    <%- include ../layouts/adminFooter %>