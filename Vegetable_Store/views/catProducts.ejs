<% include layouts/header %>

    <div class="row products">

        <% products.forEach(function(p){ %>

                <div class="col-xs-12 col-md-4 p">
                    <a class="pa" href="/products/<%= p.category%>/<%=p.slug%>">
                        <img class = "pimage" src="/productImages/<%= p.id %>/<%= p.image%>" alt="">
                    </a>
                    <h3><%= p.title%></h3>
                    <h4><%= parseFloat(p.price)%> VND</h4>
                    <a class="vd" href="/products/<%= p.category%>/<%= p.slug%>">Xem chi tiết mặt hàng</a>
                </div>
                <% }); %>


    </div>

    <% include layouts/footer %>